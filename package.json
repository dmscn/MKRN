{
  "name": "forum-api",
  "version": "1.0.0",
  "description": "MKRN Stack Application",
  "repository": "git@github.com:dmscn/forum-api.git",
  "author": "Leonardo Damasceno <ldamasceno.dev@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "node dist/bin/www.js",
    "build": "tsc",
    "dev": "nodemon --watch \"src/\" --exec \"ts-node src/bin/www.js\" -e ts",
    "prod": "yarn build && yarn start",
    "test": "jest --config ./jest.config.js",
    "test:live": "yarn test --watch --notify",
    "test:clear": "jest --clearCache",
    "lint": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\" && eslint --fix src"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "@types/jest": "^23.3.13",
    "@types/koa": "^2.0.48",
    "awilix": "^4.0.0",
    "awilix-koa": "^3.0.0",
    "axios": "^0.18.0",
    "bristol": "^0.4.0",
    "fejl": "^1.0.2",
    "koa": "^2.6.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-respond": "^2.1.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.9",
    "palin": "^2.2.0",
    "ts-jest": "^23.10.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "/dist/"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@types/supertest": "^2.0.7",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-source-map-support": "^2.0.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.84.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.5",
    "prettier": "^1.14.3",
    "smid": "^0.1.1",
    "supertest": "^3.4.2",
    "ts-node": "^8.0.1",
    "typescript": "^3.2.4"
  }
}
