{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    // Optional
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    // "noImplicitAny": true,       
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  }
}